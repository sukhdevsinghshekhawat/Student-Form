<div class="col-md-12">
	<div class="col-md-4 mx-auto">
    <%= form_with(model: @student, local: true) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.submit "edit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>